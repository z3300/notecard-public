generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContentItem {
  id        String      @id @default(cuid())
  type      ContentType
  url       String
  title     String
  note      String
  createdAt DateTime
  thumbnail String?
  author    String?
  duration  String?
  location  String?
}

enum ContentType {
  youtube
  article
  reddit
  twitter
  spotify
  soundcloud
  movie
  book
}
